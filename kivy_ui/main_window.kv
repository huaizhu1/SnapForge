# main_window.kv

BoxLayout:
    orientation: 'vertical'

    # 顶部按钮区域
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        Button:
            id: source_button
            text: '选择图片文件'
        Button:
            id: target_button
            text: '选择保存文件夹'
        Button:
            id: rename_button
            text: '重命名文件'
        Button:
            id: convert_button
            text: '转换格式'
        Button:
            id: compress_button
            text: '压缩图片'

    # 输入区域
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        TextInput:
            id: prefix_input
            hint_text: '请输入文件名前缀'
        TextInput:
            id: start_number_input
            hint_text: '请输入起始编号'
            input_filter: 'int'
        TextInput:
            id: format_input
            hint_text: '请输入目标格式'
        TextInput:
            id: quality_input
            hint_text: '请输入压缩质量'
            input_filter: 'int'

    # 状态显示区域
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            id: status_label
            text: '状态信息'
        ProgressBar:
            id: progress_bar
            max: 100
